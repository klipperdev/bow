{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "builds/**",
            "dist/**",
            "dist-ts/**",
            "doc/**",
            "node_modules/**",
            "var/**",
            "**/*.cmd",
            "**/*.ico",
            "**/*.jpg",
            "**/*.js",
            "**/*.json",
            "**/*.lock",
            "**/*.md",
            "**/*.png",
            "**/*.scss",
            "**/*.svg",
            "**/*.yaml",
            "**/*.yml"
        ]
    },
    "rules": {
        "ban-types": [
            true,
            [
                "String"
            ]
        ],
        "quotemark": [
            true,
            "single"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": false,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": false,
        "no-empty-interface": false,
        "no-console": [
            false,
            "log",
            "error"
        ],
        "no-empty": false,
        "no-shadowed-variable": false,
        "max-line-length": false
    }
}
